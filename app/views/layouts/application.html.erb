<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
<!--[if lt IE 9]>
<script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
<![endif]-->
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>


<body>
  <div class="navbar navbar-fixed-top navbar-inverse">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <ul class="nav">
			<li><h3> <%= link_to 'Valquila', welcome_path %> </h3></li>
		</ul>
        <div class="nav-collapse">
				<% if current_user %>
		 		<ul class="nav">
					<li> <%= link_to 'Personas', personas_path %> </li>
					<li> <%= link_to 'Contratos', contratos_path %> </li>
					<ul class="nav">
					  <li class="dropdown">
					    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Configuracion<b class="caret"></b></a>
					    <ul class="dropdown-menu">
					      <li> <%= link_to 'Localidades', localidads_path %> </li>
					    </ul>
					  </li>
					</ul>
		 		</ul>
		 		<ul class="nav pull-right">
					<li> <%= link_to "log out #{current_user.email}", :logout, method: :post %> </li>
					<li> <%= link_to 'Editar usuario', edit_usuario_path(current_user) %> </li>
				</ul>
				<% else %>
				<ul class="nav pull-right">
					<!-- ><li><%= link_to "Register", new_usuario_path %> </li> -->
	     			<li><%= link_to "Login", :login %></li> 
	     		</ul>
				<% end %>
		 
        </div>
      </div>
    </div>
  </div>	

  <div>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
  </div>
  <div class="container">
    <div class="row">
      <div class="span9"><%= yield %></div>
    </div>
  </div> 

</body>
</html>
