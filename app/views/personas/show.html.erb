<%- model_class = Persona -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:codigo) %>:</strong></dt>
  <dd><%= @persona.codigo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @persona.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activo) %>:</strong></dt>
  <dd><%= @persona.activo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @persona.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:esInquilino) %>:</strong></dt>
  <dd><%= @persona.esInquilino %></dd>
  <dt><strong><%= model_class.human_attribute_name(:esPropietario) %>:</strong></dt>
  <dd><%= @persona.esPropietario %></dd>
  <dt><strong><%= model_class.human_attribute_name(:esGarante) %>:</strong></dt>
  <dd><%= @persona.esGarante %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              personas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_persona_path(@persona), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              persona_path(@persona),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
