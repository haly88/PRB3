<%= form_for @contrato, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :codigo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :codigo, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :activo, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :activo, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :descripcion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :descripcion, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :carpeta, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :carpeta, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fecha_inicio, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :fecha_inicio, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fecha_fin, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :fecha_fin, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fecha_prorroga_hasta, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :fecha_prorroga_hasta, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.fields_for :contrato_items do |builder| %>
      <%= render "contrato_item_fields", :f => builder %>
    <% end %>
      <%= link_to_add_fields "+", f, :contrato_items %>
  </div>



  <div class="form-actions">
    <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
    <%= link_to t('.Cerrar', :default => t("helpers.links.Cerrar")),
                contratos_path, :class => 'btn' %>
  </div>
<% end %>
